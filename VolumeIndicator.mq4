#include "VolumeIndicator.mqh"

///////////////////////////////////////////////////////////////////////////////////////////////////////
// Abstract class to determine if enough volume is there for trade
///////////////////////////////////////////////////////////////////////////////////////////////////////
VolumeIndicator::VolumeIndicator(const string txt,int time) : symbol(txt), period(time) { }        // Constructor
///////////////////////////////////////////////////////////////////////////////////////////////////////


///////////////////////////////////////////////////////////////////////////////////////////////////////
// Momentum Index for Volume
///////////////////////////////////////////////////////////////////////////////////////////////////////
MomentumVolume::MomentumVolume(const string txt,int time) : VolumeIndicator(txt, time) { }

// True if able to buy, false if not enough volume
bool MomentumVolume::Calculate() {
   double vol = iMomentum(symbol, period, 14, PRICE_MEDIAN, 0);
   
   return (vol >= 100.1);
}